<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Do+Hyeon&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="styles.css">
	<title>test_site</title>
	<script>
		var checkUnload = true;
	    $(window).on("beforeunload", function(){
	        if(checkUnload) return "이 페이지를 벗어나면 작성된 내용은 저장되지 않습니다.";
	    });
		function create_validate(){
			var create_title_text = document.getElementById('create_title_text');
			var create_answer1 = document.getElementById('create_answer1');
			var create_answer2 = document.getElementById('create_answer2');
			if(create_title_text.value==""){
				create_title_text.focus();
				return false;
			} else if(create_answer1.value==""){
				create_answer1.focus();
				return false;
			} else if(create_answer2.value==""){
				create_answer2.focus();
				return false;
			}
			checkUnload = false;
			return true;
		}
	</script>
</head>
<body>
	<%- include('navbar') %>
    <form class="grid" action="/create" onsubmit="return create_validate()" method="post">
		<div id="title" class="d-flex justify-content-between">
	        <input type="text" maxlength="30" name="title" placeholder="제목" class="form-control" id="create_title_text">
	        <button type="button" id="create_bookmark" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="즐겨찾기">★</button>
	    </div>
	    <div id="create_answer">
	        <textarea maxlength="30" name="answer1" placeholder="선택지1" value="" id="create_answer1" class="btn btn-danger"></textarea>
	        <textarea maxlength="30" name="answer2" placeholder="선택지2" value="" id="create_answer2" class="btn btn-primary"></textarea>
	        <textarea maxlength="50" name="answer1_info" placeholder="선택지1 추가설명" id="create_answer1_info"></textarea>
	        <textarea maxlength="50" name="answer2_info" placeholder="선택지2 추가설명" id="create_answer2_info"></textarea>
	    </div>
	    <input type="submit" name="submit" id="create_button" class="btn btn-secondary" value="완료">
	</form>
</body>
</html>